<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
<Properties>
		<Property name="/Users/neharaj/eclipse-workspace/TestWebdriver">./logs</Property>
	</Properties>
  <Appenders>
  <RollingFile name="File" fileName="/Users/neharaj/eclipse-workspace/TestWebdriver/prints.log" filePattern="/Users/neharaj/eclipse-workspace/TestWebdriver/prints-%d{yyyy-MM-dd}.log">
     <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
      <SizeBasedTriggeringPolicy size="500" />
          </RollingFile>
    <Console name="Console" target="SYSTEM_OUT"> <!-- to print on console we use name=console --> 
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/> <!-- this is the format in which we want to print like date -->
    </Console>
  </Appenders>
  <Loggers>
    <Root level="trace">
      <AppenderRef ref="File"/> <!-- to get all logs  -->
    </Root>
  </Loggers>
</Configuration>